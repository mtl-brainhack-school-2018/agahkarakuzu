        },
        {
            "id": "param2",
            "name": "The second parameter",
            "optional": true,
            "type": "File",

            "value-key": "[PARAM2]"
        },
        {
            "command-line-flag": "-f",
            "id": "flag1",
            "name": "The first flag",
            "optional": true,
            "type": "Flag",
            "value-key": "[FLAG1]"
        }
    ],
    "name": "tool name",
    "output-files": [
        {
            "id": "output1",
            "name": "The first output",
            "optional": false,
            "path-template": "[PARAM1]/FitResults.mat",
            "path-template-stripped-extensions": [
                ".log"
            ],
            "value-key": "[OUTPUT1]"
        }
    ],
    "schema-version": "0.5",
