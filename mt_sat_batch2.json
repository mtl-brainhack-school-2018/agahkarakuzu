{
    "command-line": "run_mt_sat_batch.sh /Applications/MATLAB/MATLAB_Runtime/v90 [PARAM1] [PARAM2] [FLAG1] [OUTPUT1]",
    "container-image": {
        "image": "user/image",
        "index": "docker://",
        "type": "singularity"
    },
    "description": "tool description",
    

    "inputs": [
        {
            "id": "param1",
            "name": "The first parameter",
            "optional": false,
            "type": "File",
